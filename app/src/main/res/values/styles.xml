<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_accent</item>
        <item name="toolbarStyle">@style/Widget.Custom.Toolbar</item>
    </style>

    <style name="Widget.Custom.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>


    <style name="TextAppearance.Custom.Chat" parent="TextAppearance.AppCompat.Medium"/>

    <style name="TextAppearance.Custom.Chat.Title">
        <item name="android:textSize">@dimen/ts_chat_title</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Custom.Chat.Subtitle">
        <item name="android:textSize">@dimen/ts_chat_subtitle</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Custom.Chat.Time">
        <item name="android:textSize">@dimen/ts_chat_time</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Custom.Message" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/ts_message</item>
    </style>

    <style name="TextAppearance.Custom.Message.Out">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="TextAppearance.Custom.Message.Time">
        <item name="android:textSize">@dimen/ts_time</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="TextAppearance.Custom.Widget.ActionBar.Title" parent="Base.TextAppearance.Custom.Widget.ActionBar.Title"/>

    <style name="TextAppearance.Custom.Widget.ActionBar.Subtitle" parent="Base.TextAppearance.Custom.Widget.ActionBar.Subtitle"/>

    <style name="Base.TextAppearance.Custom.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/ts_actionbar_title</item>
    </style>

    <style name="Base.TextAppearance.Custom.Widget.ActionBar.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/ts_actionbar_subtitle</item>
    </style>

</resources>
