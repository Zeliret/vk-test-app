<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_accent</item>
        <item name="toolbarStyle">@style/Widget.Custom.Toolbar</item>
    </style>

    <style name="Widget.Custom.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>

</resources>
